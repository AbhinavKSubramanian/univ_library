<center>
<hr />
<h1><big>STUDENTS</big></h1>
<hr />
<br>
<table border=1>
  <tr>
    <th><b><big>NAME</b></big></th>
    <th><b><big>SECTION</b></big></th>
    <th><b><big>ADDRESS</b></big></th>
    <th colspan="3"></th>
    <th><b><big>BORROWED BOOK</b></big></th>
  </tr>
<br>
<% @students.each do |student| %>
  <tr>
    <td><%= student.name %></td>
    <td><%= student.section %></td>
    <td><%= truncate(student.address, :length => 20) %></td> 
    <td><%= link_to 'More Details', student_path(student) %></td>
    <td><%= link_to 'Edit Details', edit_student_path(student) %></td>
    <td><%= button_to 'Delete Student', student_path(student),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    </td>
    <td><% if student.book %>
              <%= link_to student.book.title, book_path(student.book) %>
              <% end %>
    </td>
  </tr>
<% end %>
</table>
</center>
<br>
<table>
<th><%= link_to 'Create New Student', new_student_path %></th>
<th><%= button_to 'Back', root_path, :method => "get" %></th>
</table>
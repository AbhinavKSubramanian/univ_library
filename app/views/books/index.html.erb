<center>
<hr />
  <h1>
    <big>BOOKS</big>
  </h1>
<hr />
<br>

<table border="1">
  <tr>
    <th><b><big>BOOK NAME</b></big></th>
    <th><b><big>AUTHOR</b></big></th>
    <th><b><big>DESCRIPTION</b></big></th>
    <th colspan="3"></th>
    <th><b><big>BORROWED BY</b></big></th>
    <th><b><big>SELECT STUDENT</b></big></th>
    <th></th>
    <th><b><big>BORROWED ON</b></big></th>
    <th><b><big>DAYS HELD</b></big></th>
    <th><b><big>DAYS LEFT</b></big></th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= truncate(book.description, :length => 20)%></td>
      <td><%= link_to 'More Details', book_path(book) %></td>
      <td><%= link_to 'Edit details', edit_book_path(book) %></td>
      <td><%= button_to 'Delete Book', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to book.student.name, student_path(book.student) if book.student %></td>
      	<%= form_tag(assign_book_path(book), method: "get") do %>
      <td><%= select("book", "student_id", Book.show_full_list,{ include_blank: true })%>
      <td><%= submit_tag('Assign student')%></td>
      <td><%= book.borrowed_on %></td>
      <td><%= book.days_borrowed %></td>
      <td><%= book.days_remaining %></td>
      <% end %>
    </tr>
  <% end %>
</table>
</center>
<br>
<table>
<th><%= link_to 'Create New Book', new_book_path %></th>
<th><%= button_to 'Back', root_path, :method => "get" %></th>
</table>